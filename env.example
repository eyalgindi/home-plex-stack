# ============================================================================
# Home Plex Entertainment Stack - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your values
# cp env.example .env
# ============================================================================

# ----------------------------------------------------------------------------
# System Configuration
# ----------------------------------------------------------------------------
TZ=America/New_York
PUID=1000
PGID=998

# ----------------------------------------------------------------------------
# Network Configuration
# ----------------------------------------------------------------------------
PLEX_NETWORK_SUBNET=172.21.0.0/16

# ----------------------------------------------------------------------------
# Traefik Configuration
# ----------------------------------------------------------------------------
# Set to false to skip Traefik (for local-only setups)
ENABLE_TRAEFIK=true
TRAEFIK_IP=172.21.0.10
TRAEFIK_HTTP_PORT=80
TRAEFIK_HTTPS_PORT=443
TRAEFIK_DASHBOARD_PORT=8088
TRAEFIK_DOMAIN=traefik.example.com
TRAEFIK_ACME_EMAIL=your_email@example.com
TRAEFIK_LOG_LEVEL=INFO
TRAEFIK_LETSENCRYPT_PATH=${HOME}/Docker/traefik/letsencrypt
TRAEFIK_MIDDLEWARE=
CF_DNS_API_TOKEN=CHANGE_ME

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME
POSTGRES_DB_RIVEN=riven
POSTGRES_DB_ZILEAN=zilean

# ----------------------------------------------------------------------------
# Plex Configuration
# ----------------------------------------------------------------------------
PLEX_URL=http://192.168.1.100:32400
PLEX_URL_INTERNAL=http://192.168.1.100:32400
PLEX_TOKEN=CHANGE_ME

# ----------------------------------------------------------------------------
# Real-Debrid Configuration
# ----------------------------------------------------------------------------
REAL_DEBRID_API_KEY=CHANGE_ME

# ----------------------------------------------------------------------------
# Riven Configuration
# ----------------------------------------------------------------------------
RIVEN_API_KEY=CHANGE_ME
RIVEN_FRONTEND_URL=https://riven.example.com
RIVEN_BACKEND_URL=http://riven:8080
ZILEAN_URL=http://zilean:8181
RIVEN_CONTENT_OVERSEERR_ENABLED=true
RIVEN_CONTENT_PLEX_WATCHLIST_ENABLED=true
RIVEN_CONTENT_PLEX_WATCHLIST_UPDATE_INTERVAL=60
RIVEN_SCRAPING_TORRENTIO_ENABLED=false
RIVEN_SYMLINK_RCLONE_PATH=${HOME}/Docker/storageRD/torrents/__all__
RIVEN_SYMLINK_LIBRARY_PATH=${HOME}/plex
RIVEN_WEBHOOK_OVERSEERR_URL=http://riven:8080/api/v1/webhook/overseerr

# ----------------------------------------------------------------------------
# Overseerr Configuration
# ----------------------------------------------------------------------------
OVERSEERR_URL=http://overseerr:5055
OVERSEERR_API_KEY=CHANGE_ME

# ----------------------------------------------------------------------------
# Domain Configuration (FQDN for Traefik)
# ----------------------------------------------------------------------------
ZURG_DOMAIN=zurg.example.com
ZURG_LOCAL_DOMAIN=zurg.local
ZURGER_DOMAIN=zurger.example.com
ZURGER_LOCAL_DOMAIN=zurger.local
ZILEAN_DOMAIN=zilean.example.com
ZILEAN_LOCAL_DOMAIN=zilean.local
OVERSEERR_DOMAIN=over.example.com
OVERSEERR_LOCAL_DOMAIN=over.local
RIVEN_DOMAIN=riven.example.com
RIVEN_LOCAL_DOMAIN=riven.local

# ----------------------------------------------------------------------------
# Static IP Configuration (in plex_network subnet)
# ----------------------------------------------------------------------------
ZURG_IP=172.21.0.25
RCLONE_IP=172.21.0.43
ZURGER_IP=172.21.0.26
RIVEN_DB_IP=172.21.0.32
ZILEAN_IP=172.21.0.28
OVERSEERR_IP=172.21.0.29
RIVEN_IP=172.21.0.31
RIVEN_FRONTEND_IP=172.21.0.30
FLARESOLVERR_IP=172.21.0.20

# ----------------------------------------------------------------------------
# Path Configuration
# ----------------------------------------------------------------------------
ZURG_CONFIG_PATH=${HOME}/Docker/zurg/config.yml
ZURG_DATA_PATH=${HOME}/Docker/zurg/
ZURGER_BUILD_CONTEXT=${HOME}/Docker/zurger
ZURGER_TEMPLATES_PATH=${HOME}/Docker/zurger/templates
ZURGER_CONFIG_PATH=${HOME}/Docker/zurger/config.ini
ZURGER_TRIGGER_PATH=${HOME}/plex/zurger/
RCLONE_CONFIG_PATH=${HOME}/Docker/rclone/rclone.conf
STORAGE_TORRENTS_PATH=${HOME}/Docker/storageRD/torrents
STORAGE_RD_PATH=${HOME}/Docker/storageRD
PLEX_LIBRARY_PATH=${HOME}/plex
ZILEAN_DATA_PATH=${HOME}/Docker/zilean
OVERSEERR_CONFIG_PATH=${HOME}/Docker/overseerr/config
RIVEN_DATA_PATH=${HOME}/Docker/riven/data
RIVEN_DB_PATH=${HOME}/Docker/riven-db

# ----------------------------------------------------------------------------
# FlareSolverr Configuration (Optional)
# ----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_HTML=false
CAPTCHA_SOLVER=
